<resources>

    <!-- Base application theme -->
    <style name="GpgAppTheme" parent="@style/GpgTransparentActionBar">
        <!-- TODO: change app colors from these defaults -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/color_background_grey</item>

        <!-- action bar overlaps content (do not use windowActionBarOverlay) -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- support library compatibility -->
        <item name="actionBarStyle">@style/GpgTransparentActionBar</item>
    </style>

    <!-- Action bar -->
    <style name="GpgTransparentActionBar"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>

    </style>

</resources>
