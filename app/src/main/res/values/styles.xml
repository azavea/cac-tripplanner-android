<resources>

    <!-- Base application theme -->
    <style name="GpgAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_background_grey</item>

        <!-- action bar overlaps content (do not use windowActionBarOverlay) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>

        <!-- search widget and its dropdown -->
        <item name="android:dropDownItemStyle">@style/GpgItemDropdownStyle</item>
        <item name="android:dropDownListViewStyle">@style/GpgListViewDropdownStyle</item>
    </style>

    <style name="GpgAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:textColor">@color/color_text_dark_grey</item>
    </style>

    <style name="GpgListViewDropdownStyle" parent="Base.Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="GpgItemDropdownStyle" parent="Base.TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/color_text_dark_grey</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="GpgDarkTextTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_background_grey</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:textColorSecondary">@color/color_text_dark_grey</item>
        <item name="android:textAppearance">@style/GpgTextAppearanceTitle</item>
    </style>

    <!-- components -->
    <style name="ToolbarTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="ToolbarOpaque" parent="ToolbarTransparent">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="Carousel">
        <item name="android:layout_height">200dp</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="fillColor">@color/color_white</item>
        <item name="pageColor">#66FFFFFF</item>
        <item name="strokeColor">#00FFFFFF</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="slideInterval">4000</item>
        <item name="indicatorGravity">bottom</item>
        <item name="indicatorMarginVertical">8dp</item>
        <item name="indicatorMarginHorizontal">16dp</item>
    </style>

    <style name="ItemDetailInfo">
        <item name="android:background">@drawable/image_scrim</item>
    </style>

    <style name="GridView">
        <item name="android:padding">4dp</item>
    </style>

    <style name="FilterButtonBar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="FilterModal">
        <item name="android:background">@color/color_background_grey</item>
    </style>

    <style name="ItemDetailOptionsCard">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="ItemDetailButtonBar">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="PlaceDetailActivitiesAndEventsBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MapPopupCard">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/color_white</item>
    </style>


    <!-- buttons -->
    <style name="BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:color">@color/color_white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="BorderlessDetailButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EventDetailCalendarButton" parent="BorderlessDetailButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="FilterBarButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToggleFilterButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@drawable/toggle_button_text_selector</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="OptionsButton">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/color_white</item>
    </style>


    <!-- text -->
    <style name="GridItemName" parent="@style/Base.TextAppearance.AppCompat.Title.Inverse">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/image_scrim</item>
    </style>

    <style name="FilterModalTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ItemDetailName" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="ItemDetailDistance" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableStart">@drawable/ic_place_white_16dp</item>
    </style>

    <style name="GpgTextAppearanceTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ItemDetailFlag" parent="GpgTextAppearanceTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemDetailDescription" parent="GpgTextAppearanceTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemDetailDescriptionToggle" parent="GpgTextAppearanceTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PlaceDetailActivity" parent="GpgTextAppearanceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="GpgPreferenceFragment">
        <item name="android:textAppearance">@style/GpgTextAppearanceTitle</item>
        <item name="android:textColorPrimary">@color/color_text_dark_grey</item>
    </style>

    <style name="AppInfoText">
        <item name="android:textAppearance">@style/GpgTextAppearanceTitle</item>
        <item name="android:textColorPrimary">@color/color_text_dark_grey</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppInfoLink">
        <item name="android:textAppearance">@style/GpgTextAppearanceTitle</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="EventDetailDate" parent="GpgTextAppearanceTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="EventDetailLocation" parent="GpgTextAppearanceTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PlaceListItemName" parent="GpgTextAppearanceTitle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlaceListItemDistance" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_text_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableStart">@drawable/ic_place_gray_16dp</item>
    </style>

    <style name="EventListItemMonth" parent="GpgTextAppearanceTitle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EventListItemDayOfMonth" parent="GpgTextAppearanceTitle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EventListItemDayOfWeek" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_text_light_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EventListItemName" parent="GpgTextAppearanceTitle">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EventListItemDestination" parent="GpgTextAppearanceTitle">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EventListItemTime" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginEnd">128dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_text_light_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!-- images -->
    <style name="GridItemImage">
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PlaceListItemImage">
        <item name="android:minHeight">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PlaceListItemBadge">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/circular_badge_background</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="PlaceDetailWatershedAllianceLogo">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/watershed_alliance_full_icon_300x104px</item>
        <item name="android:contentDescription">@string/watershed_alliance_label</item>
    </style>

    <style name="GpgAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="GpgAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
