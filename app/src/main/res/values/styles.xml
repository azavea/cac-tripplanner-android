<resources>

    <!-- Base application theme -->
    <style name="GpgAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- TODO: change app colors from these defaults -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_background_grey</item>

        <!-- action bar overlaps content (do not use windowActionBarOverlay) -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- buttons -->
    <style name="BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:color">@color/color_white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="BorderlessDetailButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="FilterBarButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToggleFilterButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@drawable/toggle_button_text_selector</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GpgDetailText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_text_dark_grey</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
</resources>
