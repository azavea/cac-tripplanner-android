<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/place_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="170dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/place_list_item_name_label"
        android:layout_below="@+id/place_list_item_image"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="10dp"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/place_list_item_distance_label"
        style="@style/TextAppearance.AppCompat.Medium"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_list_item_name_label"
        android:paddingBottom="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:layout_alignParentBottom="true" />

    <android.support.v7.widget.AppCompatImageButton
        app:backgroundTint="@color/color_white"
        android:id="@+id/place_list_item_options_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_beenhere_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>